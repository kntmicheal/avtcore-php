<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	verbose="true"
	beStrictAboutTestsThatDoNotTestAnything="true"
>
	<php>
		<!-- These settings are available as $GLOBALS variables in PHPUnit -->
		<!-- See http://phpunit.de/manual/3.7/en/database.html -->
		<var name="TEST_MYSQL_DB_HOST" value="127.0.0.1" />
		<var name="TEST_MYSQL_DB_USERNAME" value="avtcoretest" />
		<var name="TEST_MYSQL_DB_PASSWORD" value="avtcoretest" />
		<var name="TEST_MYSQL_DB_DATABASE" value="avtcoretest" />
		<var name="TEST_ORACLE_DB_HOST" value="localhost/XE" />
		<var name="TEST_ORACLE_DB_USERNAME" value="avtcoretest" />
		<var name="TEST_ORACLE_DB_PASSWORD" value="avtcoretest" />
		<var name="TEST_ORALCE_NLS_LANG" value="AL32UTF8" />
	</php>
	<testsuites>
		<testsuite name="General_Unit_Tests">
			<file>./persistence/PersistentObjectTest.php</file>
			<file>./data/DataTableTest.php</file>
			<file>./data/CsvParserTest.php</file>
		</testsuite>
		<testsuite name="MySQL_Unit_Tests">
			<file>./persistence/MySqlPersistenceAdapterTest.php</file>
			<file>./io/MySqlCsvWebServiceTest.php</file>
		</testsuite>
		<testsuite name="Oracle_Unit_Tests">
			<file>./persistence/OraclePersistenceAdapterTest.php</file>
			<file>./io/OracleCsvWebServiceTest.php</file>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory suffix=".php">../code/</directory>
		</whitelist>
	</filter>
</phpunit>